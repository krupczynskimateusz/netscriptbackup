{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(name)s:%(levelname)s:%(message)s"
        },
        "detailed": {
            "format": "%(asctime)s:%(name)s:%(levelname)s:%(message)s",
            "datefmt": "%d/%m/%Y-%H:%M:%S%z"
        }
    },
    "handlers": {
        "stderr_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "CRITICAL",
            "formatter": "detailed",
            "filename": "files/log/backup_app.log",
            "maxBytes": 10485760,
            "backupCount": 100
        },
        "stderr_console": {
            "class": "logging.StreamHandler",
            "level": "CRITICAL",
            "formatter": "simple",
            "stream": "ext://sys.stderr"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "detailed",
            "filename": "files/log/backup_app.log",
            "maxBytes": 10485760,
            "backupCount": 100
        }
    },
    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": [
                "stderr_file",
                "stderr_console",
                "file"
            ]
        }
    }
}